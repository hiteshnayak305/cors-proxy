#!/usr/bin/env node

import app from "../src/app.js";
import { logger } from "../src/middlewares/logger.js";

const startTime = Date.now();
const ENV = process.env.NODE_ENV || "development";
const PORT = normalizePort(process.env.PORT || "3000");

const server = app.listen(PORT, () => {
  const bootTime = Date.now() - startTime;

  logger.info("===========================================");
  logger.info("ðŸš€ Proxy Server Started Successfully");
  logger.info("===========================================");
  logger.info(`ðŸŒ Environment     : ${ENV}`);
  logger.info(`ðŸ§  Node Version    : ${process.version}`);
  logger.info(`ðŸ“¦ Working Dir     : ${process.cwd()}`);
  logger.info(`âš™ï¸  Listening Port  : ${PORT}`);
  logger.info(`â±ï¸  Startup Time    : ${bootTime}ms`);
  logger.info("-------------------------------------------");

  // Log the application URL
  const appUrl = `http://localhost:${PORT}`;
  logger.info(`ðŸŒ Application is running at: ${appUrl}`);

  logger.info("===========================================");
});

function normalizePort(val) {
  const port = parseInt(val, 10);
  if (isNaN(port)) return val;
  if (port >= 0) return val;
  return false;
}

// Graceful shutdown
process.on("unhandledRejection", (reason) => {
  logger.error("ðŸ’¥ Unhandled Promise Rejection:", reason);
  process.exit(1);
});
process.on("uncaughtException", (err) => {
  logger.error("ðŸ’¥ Uncaught Exception:", err);
  process.exit(1);
});
process.on("SIGTERM", () => {
  logger.info("ðŸ›‘ SIGTERM received. Shutting down gracefully...");
  server.close(() => {
    logger.info("âœ… Server closed.");
    process.exit(0);
  });
});